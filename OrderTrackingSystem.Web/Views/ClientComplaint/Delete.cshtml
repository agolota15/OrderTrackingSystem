@model OrderTrackingSystem.Domain.Models.Complaint
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Complaint";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this complaint?</h4>
<dl class="row">
    <dt class="col-sm-2">Order ID</dt>
    <dd class="col-sm-10">@Model.OrderId</dd>
    <dt class="col-sm-2">Subject</dt>
    <dd class="col-sm-10">@Model.Subject</dd>
    <dt class="col-sm-2">Description</dt>
    <dd class="col-sm-10">@Model.Description</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
