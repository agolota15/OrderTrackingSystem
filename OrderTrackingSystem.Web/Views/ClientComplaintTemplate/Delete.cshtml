@model OrderTrackingSystem.Domain.Models.ComplaintTemplate
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Template";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this template?</h4>
<dl class="row">
    <dt class="col-sm-2">Title</dt>
    <dd class="col-sm-10">@Model.TemplateTitle</dd>

    <dt class="col-sm-2">Body</dt>
    <dd class="col-sm-10">@Model.TemplateBody</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
