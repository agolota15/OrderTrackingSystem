@model OrderTrackingSystem.Domain.Models.Order
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Order";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this order?</h4>
<dl class="row">
    <dt class="col-sm-2">Order Number</dt>
    <dd class="col-sm-10">@Model.OrderNumber</dd>
    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
