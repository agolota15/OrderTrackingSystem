@model OrderTrackingSystem.Domain.Models.Order
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Order Details";
}

<h2>@ViewData["Title"]</h2>
<dl class="row">
    <dt class="col-sm-2">Order Number</dt>
    <dd class="col-sm-10">@Model.OrderNumber</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.Status</dd>

    <dt class="col-sm-2">Order Date</dt>
    <dd class="col-sm-10">@Model.OrderDate.ToString("yyyy-MM-dd")</dd>
</dl>
<p>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edit</a>
    <a asp-action="Index" class="btn btn-secondary">Back to List</a>
</p>
