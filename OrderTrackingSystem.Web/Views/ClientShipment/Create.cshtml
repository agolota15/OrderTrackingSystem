@model OrderTrackingSystem.Domain.Models.Shipment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Shipment";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Create" method="post">
    <div class="mb-3">
        <label asp-for="OrderId" class="form-label"></label>
        <input asp-for="OrderId" class="form-control" />
        <span asp-validation-for="OrderId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ReceiverId" class="form-label">Receiver (UserId)</label>
        <input asp-for="ReceiverId" class="form-control" />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <!-- SenderId, ShipmentDate, ShipmentStatus ustawiane w kontrolerze -->
    <button type="submit" class="btn btn-primary">Create</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
