@model OrderTrackingSystem.Domain.Models.Shipment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Edit Shipment";
}

<h2>@ViewData["Title"]</h2>
<form asp-action="Edit">
    <input type="hidden" asp-for="Id" />
    <div class="mb-3">
        <label asp-for="OrderId" class="form-label"></label>
        <input asp-for="OrderId" class="form-control" readonly />
    </div>
    <div class="mb-3">
        <label asp-for="ReceiverId" class="form-label"></label>
        <input asp-for="ReceiverId" class="form-control" />
        <span asp-validation-for="ReceiverId" class="text-danger"></span>
    </div>
    <div class="mb-3">
        <label asp-for="ShipmentStatus" class="form-label"></label>
        <input asp-for="ShipmentStatus" class="form-control" readonly />
        <!-- Ewentualnie read-only, bo status może być zmieniany przez sprzedawcę? -->
    </div>
    <button type="submit" class="btn btn-primary">Save</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
