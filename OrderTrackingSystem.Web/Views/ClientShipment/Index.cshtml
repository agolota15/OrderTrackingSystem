@model IEnumerable<OrderTrackingSystem.Domain.Models.Shipment>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "My Shipments";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Create New Shipment</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Shipment Date</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.OrderId</td>
                <td>@item.SenderId</td>
                <td>@item.ReceiverId</td>
                <td>@item.ShipmentDate.ToString("yyyy-MM-dd")</td>
                <td>@item.ShipmentStatus</td>
                <td>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
