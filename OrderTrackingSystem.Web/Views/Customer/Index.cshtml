@model IEnumerable<OrderTrackingSystem.Domain.Models.Order>

@{
    ViewData["Title"] = "Moje Zamówienia";
}

<h1>Moje Zamówienia</h1>

<p>
    <a asp-action="CreateOrder" class="btn btn-success">Złóż nowe zamówienie</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th>Numer zamówienia</th>
            <th>Data</th>
            <th>Status</th>
            <th>Adres wysyłki</th>
            <th>Tracking</th>
            <th>Akcje</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var order in Model)
        {
            <tr>
                <td>@order.OrderNumber</td>
                <td>@order.OrderDate.ToShortDateString()</td>
                <td>@order.Status</td>
                <td>@order.ShippingAddress</td>
                <td>@order.TrackingNumber</td>
                <td>
                    <a asp-action="Details" asp-route-id="@order.Id">Szczegóły</a>
                </td>
            </tr>
        }
    </tbody>
</table>
