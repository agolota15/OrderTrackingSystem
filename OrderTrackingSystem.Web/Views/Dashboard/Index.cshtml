@model IEnumerable<OrderTrackingSystem.Domain.Models.Order>
@{
    ViewData["Title"] = "Dashboard";
}
<h1>Dashboard</h1>
<div>
    <canvas id="ordersChart" width="400" height="200"></canvas>
</div>
@section Scripts {
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script>
        var ctx = document.getElementById('ordersChart').getContext('2d');
        var ordersChart = new Chart(ctx, {
            type: 'bar',
            data: {
                labels: ['Nowe', 'W trakcie', 'Zrealizowane', 'Anulowane'],
                datasets: [{
                    label: '# Zamówień',
                    data: [
        @Model.Count(o => o.Status == "Nowe"),
        @Model.Count(o => o.Status == "W trakcie"),
        @Model.Count(o => o.Status == "Zrealizowane"),
        @Model.Count(o => o.Status == "Anulowane")
                            ],
                    backgroundColor: ['rgba(54, 162, 235, 0.2)',
                        'rgba(255, 206, 86, 0.2)',
                        'rgba(75, 192, 192, 0.2)',
                        'rgba(255, 99, 132, 0.2)'],
                    borderColor: ['rgba(54, 162, 235, 1)',
                        'rgba(255, 206, 86, 1)',
                        'rgba(75, 192, 192, 1)',
                        'rgba(255, 99, 132, 1)'],
                    borderWidth: 1
                }]
            },
            options: {
                scales: { y: { beginAtZero: true } }
            }
        });
    </script>
}
