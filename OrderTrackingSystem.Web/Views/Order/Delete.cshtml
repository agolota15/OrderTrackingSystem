@model OrderTrackingSystem.Domain.Models.Order

@{
    ViewData["Title"] = "Szczegóły zamówienia";
}

<h1>Szczegóły zamówienia</h1>

<div>
    <h4>Informacje o zamówieniu</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">Numer zamówienia</dt>
        <dd class="col-sm-10">@Model.OrderNumber</dd>
        <dt class="col-sm-2">Nazwa klienta</dt>
        <dd class="col-sm-10">@Model.CustomerName</dd>
        <dt class="col-sm-2">Data zamówienia</dt>
        <dd class="col-sm-10">@Model.OrderDate.ToShortDateString()</dd>
        <dt class="col-sm-2">Status</dt>
        <dd class="col-sm-10">@Model.Status</dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.Id" class="btn btn-primary">Edytuj</a> |
    <a asp-action="Index" class="btn btn-secondary">Powrót do listy</a>
</div>
