@model IEnumerable<OrderTrackingSystem.Domain.Models.Complaint>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Complaints";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Create Complaint</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Customer</th>
            <th>Order ID</th>
            <th>Subject</th>
            <th>Created</th>
            <th>Status</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var c in Model)
        {
            <tr>
                <td>@c.CustomerId</td>
                <td>@c.OrderId</td>
                <td>@c.Subject</td>
                <td>@c.CreatedDate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>@c.Status</td>
                <td>
                    <a asp-action="Details" asp-route-id="@c.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@c.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@c.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
