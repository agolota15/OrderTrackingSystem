@model OrderTrackingSystem.Domain.Models.Message
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Seller Message Details";
}

<h2>@ViewData["Title"]</h2>
<dl class="row">
    <dt class="col-sm-2">From</dt>
    <dd class="col-sm-10">@Model.FromUserId</dd>

    <dt class="col-sm-2">To</dt>
    <dd class="col-sm-10">@Model.ToUserId</dd>

    <dt class="col-sm-2">Subject</dt>
    <dd class="col-sm-10">@Model.Subject</dd>

    <dt class="col-sm-2">Body</dt>
    <dd class="col-sm-10">@Model.Body</dd>

    <dt class="col-sm-2">Sent</dt>
    <dd class="col-sm-10">@Model.SentDate.ToString("yyyy-MM-dd HH:mm")</dd>
</dl>
<p>
    <a asp-action="Inbox" class="btn btn-secondary">Back</a>
</p>
