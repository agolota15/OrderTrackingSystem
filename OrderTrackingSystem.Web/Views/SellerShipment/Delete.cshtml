@model OrderTrackingSystem.Domain.Models.Shipment
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Shipment";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this shipment?</h4>
<dl class="row">
    <dt class="col-sm-2">Order ID</dt>
    <dd class="col-sm-10">@Model.OrderId</dd>

    <dt class="col-sm-2">Sender</dt>
    <dd class="col-sm-10">@Model.SenderId</dd>

    <dt class="col-sm-2">Receiver</dt>
    <dd class="col-sm-10">@Model.ReceiverId</dd>

    <dt class="col-sm-2">Shipment Date</dt>
    <dd class="col-sm-10">@Model.ShipmentDate.ToString("yyyy-MM-dd")</dd>

    <dt class="col-sm-2">Status</dt>
    <dd class="col-sm-10">@Model.ShipmentStatus</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" asp-for="Id" />
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
