@model IEnumerable<OrderTrackingSystem.Domain.Models.Shipment>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Shipments Management";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Create New Shipment</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Order ID</th>
            <th>Sender</th>
            <th>Receiver</th>
            <th>Shipment Date</th>
            <th>Status</th>
            <th>Last Update</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var shipment in Model)
        {
            <tr>
                <td>@shipment.OrderId</td>
                <td>@shipment.SenderId</td>
                <td>@shipment.ReceiverId</td>
                <td>@shipment.ShipmentDate.ToString("yyyy-MM-dd")</td>
                <td>@shipment.ShipmentStatus</td>
                <td>@shipment.LastStatusUpdate.ToString("yyyy-MM-dd HH:mm")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@shipment.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@shipment.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@shipment.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
