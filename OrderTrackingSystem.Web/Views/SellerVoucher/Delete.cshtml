@model OrderTrackingSystem.Domain.Models.Voucher
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Delete Voucher";
}

<h2>@ViewData["Title"]</h2>
<h4>Are you sure you want to delete this voucher?</h4>
<dl class="row">
    <dt class="col-sm-2">Code</dt>
    <dd class="col-sm-10">@Model.Code</dd>
    <dt class="col-sm-2">Discount Value</dt>
    <dd class="col-sm-10">@Model.DiscountValue</dd>
    <dt class="col-sm-2">Expiration</dt>
    <dd class="col-sm-10">@Model.ExpirationDate.ToString("yyyy-MM-dd")</dd>
    <dt class="col-sm-2">Used</dt>
    <dd class="col-sm-10">@Model.IsUsed</dd>
</dl>
<form asp-action="DeleteConfirmed" method="post">
    <button type="submit" class="btn btn-danger">Delete</button>
    <a asp-action="Index" class="btn btn-secondary">Cancel</a>
</form>
