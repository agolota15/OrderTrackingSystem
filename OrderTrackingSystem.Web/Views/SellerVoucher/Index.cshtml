@model IEnumerable<OrderTrackingSystem.Domain.Models.Voucher>
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "All Vouchers";
}

<h2>@ViewData["Title"]</h2>
<p>
    <a asp-action="Create" class="btn btn-success">Create New Voucher</a>
</p>
<table class="table table-striped">
    <thead>
        <tr>
            <th>Code</th>
            <th>Discount</th>
            <th>Expiration</th>
            <th>Used</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var v in Model)
        {
            <tr>
                <td>@v.Code</td>
                <td>@v.DiscountValue</td>
                <td>@v.ExpirationDate.ToString("yyyy-MM-dd")</td>
                <td>@(v.IsUsed ? "Yes" : "No")</td>
                <td>
                    <a asp-action="Details" asp-route-id="@v.Id" class="btn btn-info">Details</a>
                    <a asp-action="Edit" asp-route-id="@v.Id" class="btn btn-primary">Edit</a>
                    <a asp-action="Delete" asp-route-id="@v.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
